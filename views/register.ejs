<div class="Log-in-container">

  <div class="set-the-bar-title">
    <iframe src="https://ntmaker.gfto.ru/newneontexten/?image_height=400&image_width=1200&image_font_shadow_width=0&image_font_size=150&image_background_color=4D194D&image_text_color=FFFFFF&image_font_shadow_color=6A6A6A&image_url=&image_text=Set The Bar&image_font_family=Metropolis&" frameborder='no' scrolling='no' width="1200" height="400"></iframe>
  </div>
  <div class="set-the-bar-text">
    <div class="set-the-bar-moto">Find your perfect bar</div>
    <div class="set-the-bar-intro">introduction text about the app comes here and it will be very nice in lato font</div>
  </div>
  <div class="input-info-container input-register-info-container">

<%- include ('./partials/messages') %>
<form action="/users/register" method="POST">
<div>
    <label for="name"></label>
    <input
      class="input-info"
      type="name"
      name="name"
      placeholder="Enter Name"
      value="<%= typeof name != 'undefined' ? name : '' %>"
    />
  
</div>
<div>
    <label for="email"></label>
    <input
      class="input-info"
      type="email"
      name="email"
      placeholder="Enter Email"
      value="<%= typeof email != 'undefined' ? email : '' %>"
    />
  </div>
  <div >
    <label for="password"></label>
    <input
      class="input-info"
      type="password"
      name="password"
      placeholder="Create Password"
      value="<%= typeof password != 'undefined' ? password : '' %>"
    />
  </div>
  <div >
    <label for="password2"></label>
    <input
      class="input-info"
      type="password"
      name="password2"
      placeholder="Confirm Password"
      value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
    />
  </div>
  <button type="submit" class="btn btn-primary btn-block input-info">
    Register
  </button>

  <div class="connect-with-tier-container">
    <div class="tier-logo"></div>
    <div class="tier-text">Log-in with Facebook</div>
  </div>
</form>
</div>
<div class="no-account">
  have an account already? <span><a href="/users/login" class="btn btn-primary btn-block mb-2"
    >Login</a></span>
</div>
  
</div>

